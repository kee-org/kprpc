{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeVersion": "8.11.1",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeArgs": [
                "--nolazy"
            ],
            "console": "internalConsole",
            "env": {
                "NODE_ENV": "test"
            },
            "sourceMaps": true,
            "stopOnEntry": false
        }
    ]
}
